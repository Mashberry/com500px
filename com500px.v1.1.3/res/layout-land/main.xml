<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#000000" >
	
	<ProgressBar 
	    android:id="@+id/progressBar"
	    style="?android:attr/progressBarStyleHorizontal"
	    android:layout_width="match_parent"
	    android:layout_height="10dp"	/>
	
	<LinearLayout
	    android:id="@+id/menu_layout"
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:gravity="center"
		android:background="#64646464"	>
	    <Button
	        android:id="@+id/photo_btn"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:layout_margin="2dp"
	        android:text="Photos"
	        android:textSize="14dp"
	        android:textColor="#ffffff"
	        android:background="@android:color/transparent"	/>
	    <Button
	        android:id="@+id/category_btn"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:layout_margin="2dp"
	        android:text="Category"
	        android:textSize="14dp"
	        android:textColor="#ffffff"
	        android:background="@android:color/transparent"	/>
	    <Button
	        android:id="@+id/menu_btn"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:layout_margin="2dp"
	        android:text="Menu"
	        android:textSize="14dp"
	        android:textColor="#ffffff"
	        android:background="@android:color/transparent"	/>
	    <Button
	        android:id="@+id/refresh_btn"
	        android:layout_width="match_parent"
	        android:layout_height="40dp"
	        android:layout_weight="1"
	        android:layout_margin="2dp"
	        android:text="Refresh"
	        android:textSize="14dp"
	        android:textColor="#ffffff"
	        android:background="@android:color/transparent"	/>
	</LinearLayout>
	
	<FrameLayout
	    android:id="@+id/main_grid_layout"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/progressBar"
	    android:layout_above="@id/ads"
	    android:layout_toRightOf="@id/menu_layout"
	    android:layout_alignParentRight="true"	>
		<GridView
		    android:id="@+id/main_grid"
			android:layout_width="match_parent" 
		    android:layout_height="match_parent"
		    android:padding="0dp"
		    android:verticalSpacing="@dimen/main_grid_space"
		    android:horizontalSpacing="@dimen/main_grid_space"
		    android:gravity="center"
		    android:stretchMode="columnWidth"	/>
		
		<GridView
		 	android:id="@+id/sub_grid"
			android:layout_width="wrap_content" 
		    android:layout_height="wrap_content"
		    android:layout_margin="15dp"
		    android:layout_gravity="center_horizontal|top"
		    android:padding="2dp"
		    android:numColumns="1"
		    android:verticalSpacing="5dp"
		    android:horizontalSpacing="10dp"
		    android:background="#dd383838"
		    android:visibility="gone"	/>
	</FrameLayout>
	
	<!-- 배너 -->
    <com.mocoplex.adlib.AdlibAdViewContainer
        android:id="@+id/ads"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/menu_layout" />
</RelativeLayout>